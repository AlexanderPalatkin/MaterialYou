<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MaterialYou" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="themeColorPrimary">@color/colorPrimary</item>
        <item name="chipStyle">@style/MyChipsStyle</item>
        <item name="bottomNavigationStyle">@style/MyBottomNavigationStyle</item>
        <item name="bottomAppBarStyle">@style/MyBottomAppBar</item>
        <item name="appBarBackgroundTint">@color/pink_dark</item>
        <item name="floatingActionButtonStyle">@style/MyFloatingActionButton</item>
        <item name="fabBackgroundTint">@color/pink</item>
    </style>

    <style name="Theme.MaterialYou" parent="Base.Theme.MaterialYou" />

    <style name="SplashTheme" parent="Theme.MaterialYou">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="IndigoTheme" parent="Theme.MaterialYou">
        <item name="colorPrimary">@color/indigo</item>
        <item name="colorPrimaryVariant">@color/indigo_dark</item>
        <item name="colorSecondary">@color/light_gray</item>
        <item name="colorSecondaryVariant">@color/light_gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="textColorConnected">@color/colorAccent</item>
        <item name="textColorDisConnected">@color/light_gray</item>
        <item name="themeColorPrimary">@color/teal_700</item>
        <item name="appBarBackgroundTint">@color/indigo_dark</item>
        <item name="fabBackgroundTint">@color/teal_700</item>
    </style>

    <style name="PinkTheme" parent="Theme.MaterialYou">
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/pink_dark</item>
        <item name="colorSecondary">@color/pink_light</item>
        <item name="colorSecondaryVariant">@color/pink_light</item>
        <item name="colorOnSecondary">@color/pink_light</item>
        <item name="textColorConnected">@color/colorAccent</item>
        <item name="textColorDisConnected">@color/light_gray</item>
        <item name="themeColorPrimary">@color/pink</item>
        <item name="appBarBackgroundTint">@color/pink_dark</item>
        <item name="fabBackgroundTint">@color/pink</item>
    </style>

    <style name="OrangeTheme" parent="Theme.MaterialYou">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/brown</item>
        <item name="colorSecondary">@color/orange_light</item>
        <item name="colorSecondaryVariant">@color/orange_light</item>
        <item name="colorOnSecondary">@color/brown</item>
        <item name="textColorConnected">@color/colorAccent</item>
        <item name="textColorDisConnected">@color/light_gray</item>
        <item name="themeColorPrimary">@color/orange</item>
        <item name="appBarBackgroundTint">@color/brown</item>
        <item name="fabBackgroundTint">@color/orange_bright</item>
    </style>

    <style name="GreenTheme" parent="Theme.MaterialYou">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green_dark</item>
        <item name="colorSecondary">@color/green_light</item>
        <item name="colorSecondaryVariant">@color/green_light</item>
        <item name="colorOnSecondary">@color/green_acid</item>
        <item name="textColorConnected">@color/colorAccent</item>
        <item name="textColorDisConnected">@color/light_gray</item>
        <item name="themeColorPrimary">@color/green</item>
        <item name="appBarBackgroundTint">@color/green_dark</item>
        <item name="fabBackgroundTint">@color/green</item>
    </style>
</resources>